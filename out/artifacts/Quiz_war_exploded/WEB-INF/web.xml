<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionServlet</servlet-name>
        <servlet-class>controller.QuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/userlist</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/questions</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/addQuestion</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/addQuestionPage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/deleteQuestion</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/editQuestion</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/updateQuestion</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/questionCategory</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/questionDifficulty</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/gametype</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/letsplay</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/myprofile</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>userfilter</filter-name>
        <filter-class>controller.UserFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>userfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>QuizServlet</servlet-name>
        <servlet-class>controller.QuizServlet</servlet-class>
    </servlet>

   <servlet-mapping>
       <servlet-name>QuizServlet</servlet-name>
       <url-pattern>/playquiz</url-pattern>
   </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuizServlet</servlet-name>
        <url-pattern>/nextquestion</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>QuizServlet</servlet-name>
        <url-pattern>/viewresult</url-pattern>
    </servlet-mapping>


    
</web-app>